<h1>summernote-rails test page</h1>

<div class="summernote">Hello Summernote</div>
<div class="summernote-plugin">Hello Summernote Plugin</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('.summernote').summernote({
      height: 280,
      lang: 'ko-KR'
    });

    $('.summernote-plugin').summernote({
      height: 280,
      toolbar : [
        ['style', ['bold', 'italic', 'underline', 'clear']],
        ['font', ['strikethrough']],
        ['fontsize', ['fontsize']],
        ['color', ['color']],
        ['para', ['ul', 'ol', 'paragraph']],
        ['height', ['height']],
        ['table', ['table']],
        ['chart', ['chart']],
        ['group', [ 'video' ]]
      ]
    });
  });
</script>